datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Endpoint {
  id           Int      @id @default(autoincrement())
  url          String
  name         String
  status       Int?
  responseTime Int?
  lastChecked  DateTime @updatedAt
  createdAt    DateTime @default(now())
}

model Alert {
  id          Int      @id @default(autoincrement())
  endpointId  Int
  message     String
  createdAt   DateTime @default(now())

  @@index([endpointId])
}


